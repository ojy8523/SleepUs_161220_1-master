<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        android:id="@+id/give_page"
        android:background="@android:color/transparent"
        android:src="@drawable/give_page"
        android:visibility="visible"/>

    <ImageView
        android:layout_width="260dp"
        android:id="@+id/current_sleep"
        android:src="@drawable/current"
        android:background="#00000000"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"
        android:layout_height="40dp"/>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/current_sleep">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Sleep Time"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/current_sleep"
            android:id="@+id/current_sleep_time"
            android:layout_marginBottom="30dp"/>
        <TextView
            android:textColor="#FF00FF"
            android:id="@+id/curSleepTimeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/current_sleep"
            android:layout_toRightOf="@+id/total_earned_money"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:textSize="60px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="분"/>
    </LinearLayout>



    <ImageView
        android:layout_width="380dp"
        android:layout_height="5dp"
        android:id="@+id/line_1"
        android:src="@drawable/line"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"/>



    <ImageView
        android:layout_width="255dp"
        android:layout_height="40dp"
        android:id="@+id/total_sleep"
        android:src="@drawable/total_sleep"
        android:background="#00000000"
        android:layout_below="@+id/line_1"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="30dp"/>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/total_sleep">
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Earned Time"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/total_sleep"
            android:id="@+id/total_earned_time"
            android:layout_marginBottom="30dp"
            />
        <TextView
            android:textColor="#9d25c9"
            android:id="@+id/totalEarnedTimeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/current_sleep"
            android:layout_toRightOf="@+id/total_earned_money"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:textSize="60px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="분"/>
    </LinearLayout>



    <ImageView
        android:layout_width="380dp"
        android:layout_height="5dp"
        android:id="@+id/line_2"
        android:src="@drawable/line"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"/>



    <ImageView
        android:layout_width="258dp"
        android:layout_height="40dp"
        android:id="@+id/total_earned"
        android:src="@drawable/total_earned"
        android:background="#00000000"
        android:layout_below="@+id/line_2"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"/>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/total_earned">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Earned Money"
            android:layout_marginLeft="30dp"
            android:id="@+id/total_earned_money"
            android:layout_marginBottom="30dp"/>
        <TextView
            android:textColor="#49135c"
            android:id="@+id/totalEarnedMoneyTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/current_sleep"
            android:layout_toRightOf="@+id/total_earned_money"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:textSize="60px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="원"/>
    </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
<!--
    <Button
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:background="#00DD00"
        android:layout_marginBottom="20dp"
        android:textColor="#FFFFFFFF"
        />-->

        <Button
            android:id="@+id/startCharity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="donate!"
            android:background="#00DD00"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            android:textColor="#FFFFFFFF"

            />

    </LinearLayout>

</RelativeLayout>