<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >



    <ImageView
        android:id="@+id/imgTranslate"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"/>


    <TextView
        android:id="@+id/charityExplain"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_below="@+id/imgTranslate"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/back"
        android:lineSpacingExtra="15dip"
        />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/startSleep"
        android:src="@drawable/start_charity"
        android:layout_below="@+id/charityExplain"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"
        android:layout_marginBottom="10dp"
        android:background="#00000000"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backToCompanyList"
        android:text="back"
        android:layout_below="@+id/startSleep"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"

        />



</RelativeLayout>